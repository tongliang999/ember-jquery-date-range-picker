
{{#if hasBlock}}
  {{yield}}
{{else}}
  <input value={{value}} stylexx={{inputStyle}} placeholder="{{_format}}"/>
{{/if}}

<div class="time-container{{if showButton '' ' clickable'}}" {{action 'containerOpenClose' bubbles=false}}>
  <span class="time" {{action 'containerOpenClose' bubbles=false}}>{{startTimeString}}</span>

  {{#if isDateRange}}
    <span class="time" {{action 'containerOpenClose' bubbles=false}}>{{endTimeString}}</span>
  {{/if}}

  {{#if showButton}}
    <a class="button c-icon calendar-icon" {{action 'openClose' bubbles=false}}>{{buttonText}}</a>
  {{/if}}
</div>
